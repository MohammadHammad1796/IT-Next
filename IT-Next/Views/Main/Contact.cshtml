	ViewData["title"] = "Contact US";
}

@section metaTags
{
  <meta name="description" content="IT-Next - Contact US.">
  <meta property="og:description" content="IT-Next - Contact US.">
  <meta property="og:image" content="@($"{Context.Request.Scheme}://{Context.Request.Host}/images/logos/it_logo_square.png")">
