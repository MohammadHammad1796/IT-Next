		<div class="container">
			<div class="row">
				<div class="col-md-12">
					<div class="full">
						<div class="title-holder">
							<div class="title-holder-cell text-left">
								<h1 class="page-title">Contact US</h1>
								<ol class="breadcrumb">
									<li><a asp-controller="Main" asp-action="Home">Home</a></li>
									<li class="active">Contact US</li>
								</ol>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
}

