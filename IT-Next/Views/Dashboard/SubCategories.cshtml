@model SaveSubCategoryViewModel;
@{
	ViewData["title"] = "Manage Sub Categories";
}

@section styles {
	<link rel="stylesheet" href="css/dashboard/dataTable.css" asp-append-version="true" />
	<link rel="stylesheet" href="css/dashboard/form.css" asp-append-version="true" />
}

<section class="container-fluid dataTableSection"></section>

<div class="modal fade" id="manageModal" tabindex="-1" aria-labelledby="manageModalLabel" aria-hidden="true">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="manageModalLabel">New Sub category</h5>
				<button type="button" class="btn-close " data-bs-dismiss="modal" aria-label="Close"></button>
			</div>
			<form id="manageItems">
				<div class="modal-body">
					<div class="mb-3">
						<label asp-for="Name" class="col-form-label"></label>
						<input autocomplete="off" asp-for="Name" class="form-control" />
						<span asp-validation-for="Name"></span>
					</div>
				</div>
				<div class="modal-body">
					<div class="mb-3">
						<label asp-for="CategoryId" class="col-form-label">Category</label>
						<input type="text" id="CategoryName" autocomplete="off" class="form-control" />
						<span asp-validation-for="CategoryId"></span>
						<input asp-for="CategoryId" type="hidden" data-val-required="The Category field is required." />
					</div>
				</div>
				<input type="hidden" asp-for="Id" value="0" />
				<div class="modal-footer">
					<button type="submit" class="btn btn-primary" id="addBtn" disabled="disabled">Add</button>
				</div>
			</form>
		</div>
	</div>
</div>

@section scripts
{
	<environment include="Development">
		<script src="libs/corejs-typeahead1.3.1/typeahead.bundle.min.js"></script>
	</environment>
	<environment exclude="Development">
		<script src="https://cdnjs.cloudflare.com/ajax/libs/corejs-typeahead/1.3.1/typeahead.bundle.min.js"
			asp-fallback-src="libs/corejs-typeahead1.3.1/typeahead.bundle.min.js"></script>
	</environment>
	<script src="js/dashboard/form.js" asp-append-version="true"></script>
	<script src="js/dashboard/deleteModal.js" asp-append-version="true"></script>
	<script src="js/dashboard/dataTable.js" asp-append-version="true"></script>
	<script src="js/dashboard/manageSubCategories.js" asp-append-version="true"></script>
}